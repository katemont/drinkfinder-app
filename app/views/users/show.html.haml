%p= notice
%p
  %b Name:
  = @user.name
%p
  %b Profile pic:
  - if @user.profile_pic?
    = link_to image_tag(@user.profile_pic.thumb.url), @user.profile_pic.detail.url  
  - else
    = link_to image_tag @user.gravatar_url
%p
  %b Email:
  = @user.email
%p
  %b Your recommendations:

  - @user.recommendations.each do |recommendation|
    %tr
      %td= recommendation.bar.try :name
      %td= recommendation.try :review

  %b Friends:
  %ul
    - for friendship in @user.friendships
      %li
        = h friendship.friend.username
        (#{link_to "remove", friendship, :method => :delete})
  %p= link_to "Find Friends", users_path
  
  %b Friended by Users:
  %ul
    - for user in @user.inverse_friends
      %li= h user.username
  %b User since:
  %p= "#{time_ago_in_words(@user.created_at)} ago"

= link_to 'Edit your profile', edit_user_path(@user)
= link_to 'Back', users_path
