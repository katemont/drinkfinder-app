.large-8.columns
  .row
  - @users.each do |user|
    .large-4.small-6.columns
      - if user.profile_pic?
        = link_to image_tag(user.profile_pic.thumb.url), user.profile_pic.detail.url  
      - else
        = link_to image_tag user.gravatar_url
      .panel
        %h5= user.name
        %h6= link_to 'Follow', friendships_path(:friend_id => user), :method => :post, title: "Add a friend to see their recommendations", data: {tooltip: true}
        - if current_user.role?(:admin)
          %li= user.email
          %li= user.role
          %li= link_to 'Show', user_path(user)
          %li= link_to 'Edit', edit_user_path(user)
          %li= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
   
      
       
       
