= form_for(@bar) do |f|
  - if @bar.errors.any?
    #error_explanation
      %h2
        = pluralize(@bar.errors.count, "error")
        prohibited this bar from being saved:
      %ul
        - @bar.errors.full_messages.each do |msg|
          %li= msg
  %div
    = f.label :name
    = f.text_field :name, autofocus: true
  %div
    = f.label :location
    = f.text_field :location
  .submit_form_button
    = f.submit
 