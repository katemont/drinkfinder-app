%h2 Recommendations

%table
  %thead
    %tr
      %th Bar
      %th Review
      %th Tags
      %th User
      %thead 
      %th
      %th
    - @recommendations.each do |recommendation|
      %tr
        %td= recommendation.bar.try :name
        %td= recommendation.review
        %td= raw recommendation.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')
        %td= recommendation.user.try :name
        %td= link_to 'Show', recommendation
        %td= link_to 'Edit', edit_recommendation_path(recommendation)
        %td= link_to 'Destroy', recommendation, method: :delete, data: { confirm: 'Are you sure?' }

        %dl.accordion{"data-accordion" => ""}
          %dd.accordion-navigation
            %a{:href => "#panel"} 
              = recommendation.bar.try :name
              #panel.content
                = recommendation.review
                = raw recommendation.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')
                = recommendation.user.try :name
                = link_to 'Show', recommendation
                = link_to 'Edit', edit_recommendation_path(recommendation)
                = link_to 'Destroy', recommendation, method: :delete, data: { confirm: 'Are you sure?' }

   